<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item>
        <shape android:shape="rectangle" >
            <gradient
                android:angle="270"
                android:endColor="#33D0E0"
                android:gradientRadius="360"
                android:startColor="#987CDB"
                android:type="linear" />
            <corners android:radius="15dp"/>

<!--            <stroke-->
<!--                android:width="10dp"-->
<!--                android:color="#ff207d94" />-->
        </shape>
    </item>
    <item
        android:bottom="2dp"
        android:left="2dp"
        android:right="2dp"
        android:top="2dp">
        <shape android:shape="rectangle" >
            <corners android:radius="15dp"/>

            <solid android:color="#3D3D3D" />
        </shape>
    </item>

</layer-list>