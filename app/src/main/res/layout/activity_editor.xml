<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linear_layout_editor"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blacktwo"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/rl"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraint_save_control"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/image_view_exit"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:padding="13dp"
                android:src="@drawable/backbt"
                app:tint="@color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/imageViewUndo"
                    android:layout_width="38dp"
                    android:layout_height="38dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:onClick="onClick"
                    android:padding="9dp"
                    android:src="@drawable/undo"
                    app:tint="@color/white" />

                <ImageView
                    android:id="@+id/imageViewRedo"
                    android:layout_width="38dp"
                    android:layout_height="38dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:onClick="onClick"
                    android:padding="9dp"
                    android:scaleX="-1"
                    android:src="@drawable/undo"
                    app:tint="@color/white" />

            </LinearLayout>


            <TextView
                android:id="@+id/imageViewSaveFinal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins"
                android:padding="12dp"
                android:text="Save"
                android:textColor="@color/pink"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <RelativeLayout
            android:id="@+id/relativeLayoutSaveText"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent">

            <ImageView
                android:id="@+id/image_view_close_text"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:onClick="onClick"
                android:padding="12dp"
                android:src="@drawable/ic_round_close" />

            <ImageView
                android:id="@+id/image_view_save_text"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:onClick="onClick"
                android:padding="12dp"
                android:src="@drawable/ic_round_check" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relativeLayoutSaveSticker"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent">

            <ImageView
                android:id="@+id/closeSticker"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:onClick="onClick"
                android:padding="12dp"
                android:src="@drawable/ic_round_close" />


            <ImageView
                android:id="@+id/saveSticker"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:onClick="onClick"
                android:padding="12dp"
                android:src="@drawable/ic_round_check" />

        </RelativeLayout>

        <!--    <com.solodroid.ads.sdk.ui.BannerAdView-->
        <!--        android:id="@+id/bannerAdView"-->
        <!--        android:layout_width="match_parent"-->
        <!--        android:layout_height="wrap_content"/>-->

        <!--        <ScrollView-->
        <!--            android:layout_width="match_parent"-->
        <!--            android:layout_height="match_parent">-->

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraint_layout_root_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <RelativeLayout
                android:id="@+id/relative_layout_loading"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/background_loading"
                android:elevation="200dp"
                app:layout_constraintBottom_toTopOf="@id/guideline"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <com.airbnb.lottie.LottieAnimationView
                    android:id="@+id/lottie_animation_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginTop="8dp"
                    app:lottie_autoPlay="true"
                    app:lottie_loop="true"
                    app:lottie_rawRes="@raw/loading" />


            </RelativeLayout>

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guidelinePaint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_end="190dp" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_end="80dp" />

            <RelativeLayout
                android:id="@+id/relative_layout_wrapper_photo"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintBottom_toTopOf="@id/guideline"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <com.photo.editor.snapstudio.PhEditor.Editor.PhotoEditorView
                    android:id="@+id/photo_editor_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    app:showBorder="true"
                    app:showIcons="true" />

            </RelativeLayout>


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_view_tools"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:paddingVertical="10dp"
                android:background="@drawable/card3"
                app:layout_constraintBottom_toBottomOf="parent" />

            <!--filters-->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraint_layout_filter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/card3"
                android:orientation="vertical"
                android:paddingTop="8dp"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/constraint_layout_confirm_compare"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    app:layout_constraintBottom_toTopOf="@+id/recycler_view_filter">

                    <SeekBar
                        android:id="@+id/seekbar_filter"
                        android:layout_width="250dp"
                        android:layout_height="match_parent"
                        android:layout_centerInParent="true"
                        android:background="@null"
                        android:max="100"
                        android:progress="100"
                        android:progressBackgroundTint="#C89393"
                        android:progressTint="@color/pink"
                        android:splitTrack="false"
                        android:thumbTint="@color/pink"
                        app:layout_constraintEnd_toStartOf="@id/image_view_compare_filter"
                        app:layout_constraintStart_toStartOf="parent" />

                    <ImageView
                        android:id="@+id/image_view_compare_filter"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="15dp"
                        android:background="@drawable/background_unslelected"
                        android:backgroundTint="@color/blacktwo"
                        android:onClick="onClick"
                        android:padding="8dp"
                        android:src="@drawable/ic_compare"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler_view_filter"
                    android:layout_width="match_parent"
                    android:layout_height="82dp"
                    android:orientation="horizontal"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    app:layout_constraintBottom_toTopOf="@id/constraint_layout_confirm_filter" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/constraint_layout_confirm_filter"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    app:layout_constraintBottom_toBottomOf="parent">

                    <ImageView
                        android:id="@+id/image_view_close_filter"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:onClick="onClick"
                        android:padding="12dp"
                        android:src="@drawable/ic_round_close"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/filter_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins"
                        android:gravity="center"
                        android:text="FILTER"
                        android:textColor="@color/white"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:id="@+id/image_view_save_filter"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:onClick="onClick"
                        android:padding="12dp"
                        android:src="@drawable/ic_round_check"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <!--overlay-->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraint_layout_overlay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/card3"
                android:orientation="vertical"
                android:paddingTop="8dp"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/constraint_layout_confirm_compare_overlay"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    app:layout_constraintBottom_toTopOf="@+id/recycler_view_overlay">

                    <SeekBar
                        android:id="@+id/seekbar_overlay"
                        android:layout_width="250dp"
                        android:layout_height="match_parent"
                        android:layout_centerInParent="true"
                        android:background="@null"
                        android:max="100"
                        android:progress="100"
                        android:progressBackgroundTint="#C89393"
                        android:progressTint="@color/pink"
                        android:splitTrack="false"
                        android:thumbTint="@color/pink"
                        app:layout_constraintEnd_toStartOf="@id/image_view_compare_overlay"
                        app:layout_constraintStart_toStartOf="parent" />

                    <ImageView
                        android:id="@+id/image_view_compare_overlay"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="15dp"
                        android:background="@drawable/background_unslelected"
                        android:backgroundTint="@color/blacktwo"
                        android:onClick="onClick"
                        android:padding="8dp"
                        android:src="@drawable/ic_compare"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler_view_overlay"
                    android:layout_width="match_parent"
                    android:layout_height="82dp"
                    android:orientation="horizontal"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    app:layout_constraintBottom_toTopOf="@id/constraint_layout_confirm_overlay" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/constraint_layout_confirm_overlay"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    app:layout_constraintBottom_toBottomOf="parent">

                    <ImageView
                        android:id="@+id/image_view_close_overlay"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:onClick="onClick"
                        android:padding="12dp"
                        android:src="@drawable/ic_round_close"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/overlay_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins"
                        android:gravity="center"
                        android:text="OVERLAY"
                        android:textColor="@color/white"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:id="@+id/image_view_save_overlay"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:onClick="onClick"
                        android:padding="12dp"
                        android:src="@drawable/ic_round_check"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <!--adjust-->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraint_layout_adjust"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/card3"
                android:orientation="vertical"
                android:paddingTop="8dp"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/constraint_layout_confirm_compare_adjust"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginBottom="8dp"
                    app:layout_constraintBottom_toTopOf="@+id/recycler_view_adjust">

                    <SeekBar
                        android:id="@+id/seekbar_adjust"
                        android:layout_width="250dp"
                        android:layout_height="match_parent"
                        android:layout_centerInParent="true"
                        android:background="@null"
                        android:max="100"
                        android:progress="100"
                        android:progressBackgroundTint="#C89393"
                        android:progressTint="@color/pink"
                        android:splitTrack="false"
                        android:thumbTint="@color/pink"
                        app:layout_constraintEnd_toStartOf="@id/image_view_compare_adjust"
                        app:layout_constraintStart_toStartOf="parent" />

                    <ImageView
                        android:id="@+id/image_view_compare_adjust"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="15dp"
                        android:background="@drawable/background_unslelected"
                        android:backgroundTint="@color/blacktwo"
                        android:onClick="onClick"
                        android:padding="8dp"
                        android:src="@drawable/ic_compare"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler_view_adjust"
                    android:layout_width="match_parent"
                    android:layout_height="75dp"
                    android:orientation="horizontal"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    app:layout_constraintBottom_toTopOf="@id/constraint_layout_confirm_adjust" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/constraint_layout_confirm_adjust"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    app:layout_constraintBottom_toBottomOf="parent">

                    <ImageView
                        android:id="@+id/image_view_close_adjust"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:onClick="onClick"
                        android:padding="12dp"
                        android:src="@drawable/ic_round_close"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/adjust_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins"
                        android:gravity="center"
                        android:text="ADJUST"
                        android:textColor="@color/white"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:id="@+id/image_view_save_adjust"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:onClick="onClick"
                        android:padding="12dp"
                        android:src="@drawable/ic_round_check"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <!--stickers-->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraint_layout_sticker"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/card3"
                android:elevation="10dp"
                android:orientation="vertical"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/constraintLayoutAddSticker"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent">

                    <ImageView
                        android:id="@+id/imageViewAddSticker"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="20dp"
                        android:onClick="onClick"
                        android:padding="5dp"
                        android:src="@drawable/ic_add"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/seekbarStickerAlpha"
                        app:layout_constraintTop_toTopOf="parent" />

                    <SeekBar
                        android:id="@+id/seekbarStickerAlpha"
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="15dp"
                        android:background="@null"
                        android:max="255"
                        android:progress="255"
                        android:progressBackgroundTint="#C89393"
                        android:progressTint="@color/pink"
                        android:splitTrack="false"
                        android:thumbTint="@color/pink"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/imageViewAddSticker"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <LinearLayout
                    android:id="@+id/linear_layout_wrapper_sticker_list"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:background="@color/blacktwo"
                    android:orientation="vertical"
                    app:layout_constraintBottom_toBottomOf="parent">

                    <FrameLayout
                        android:id="@+id/frame_layout_wrapper_horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_scrollFlags="enterAlways|scroll">

                        <com.photo.editor.snapstudio.PhEditor.Adapter.RecyclerTabLayout
                            android:id="@+id/recycler_tab_layout"
                            android:layout_width="match_parent"
                            android:layout_height="50dp" />

                    </FrameLayout>

                    <androidx.viewpager.widget.ViewPager
                        android:id="@+id/sticker_viewpaper"
                        android:layout_width="match_parent"
                        android:layout_height="180dp" />

                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <!--draw-->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintLayoutPaint"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/constraintLP"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/card3"
                    android:elevation="2dp"
                    android:paddingTop="5dp"
                    app:layout_constraintBottom_toBottomOf="parent">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/constraint_layout"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginBottom="10dp"
                        app:layout_constraintBottom_toTopOf="@+id/linearLayoutSeekBar">

                        <ImageView
                            android:id="@+id/imageViewPaint"
                            android:layout_width="45dp"
                            android:layout_height="35dp"
                            android:background="@drawable/background_selected_color"
                            android:padding="9.5dp"
                            android:src="@drawable/ic_splash"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toStartOf="@+id/imageViewNeon"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:tint="@color/pink" />

                        <ImageView
                            android:id="@+id/imageViewNeon"
                            android:layout_width="45dp"
                            android:layout_height="35dp"
                            android:background="@drawable/background_unslelected"
                            android:padding="9.5dp"
                            android:src="@drawable/ic_neon"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toStartOf="@+id/imageViewEraser"
                            app:layout_constraintStart_toEndOf="@+id/imageViewPaint"
                            app:layout_constraintTop_toTopOf="parent" />

                        <ImageView
                            android:id="@+id/imageViewEraser"
                            android:layout_width="45dp"
                            android:layout_height="35dp"
                            android:background="@drawable/background_unslelected"
                            android:padding="9.5dp"
                            android:src="@drawable/ic_eraser"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toStartOf="@+id/imageViewPaintUndo"
                            app:layout_constraintStart_toEndOf="@+id/imageViewNeon"
                            app:layout_constraintTop_toTopOf="parent" />

                        <ImageView
                            android:id="@+id/imageViewPaintUndo"
                            android:layout_width="45dp"
                            android:layout_height="35dp"
                            android:background="@drawable/background_unslelected"
                            android:onClick="onClick"
                            android:padding="9.5dp"
                            android:src="@drawable/undo"
                            android:tint="@color/white"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toStartOf="@+id/imageViewPaintRedo"
                            app:layout_constraintStart_toEndOf="@+id/imageViewEraser"
                            app:layout_constraintTop_toTopOf="parent" />

                        <ImageView
                            android:id="@+id/imageViewPaintRedo"
                            android:layout_width="45dp"
                            android:layout_height="35dp"
                            android:background="@drawable/background_unslelected"
                            android:onClick="onClick"
                            android:padding="9.5dp"
                            android:tint="@color/white"
                            android:scaleX="-1"
                            android:src="@drawable/undo"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/imageViewPaintUndo"
                            app:layout_constraintTop_toTopOf="parent" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <RelativeLayout
                        android:id="@+id/linearLayoutSeekBar"
                        android:layout_width="match_parent"
                        android:layout_height="85dp"
                        android:orientation="horizontal"
                        app:layout_constraintBottom_toTopOf="@+id/constraint_layout_confirmP">

                        <LinearLayout
                            android:id="@+id/linearLayoutSize"
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:layout_above="@id/linearLayoutRecycler"
                            android:layout_marginBottom="8dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:paddingStart="15dp"
                            android:paddingEnd="15dp">

                            <TextView
                                android:id="@+id/size_txt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingStart="5dp"
                                android:paddingEnd="5dp"
                                android:text="@string/size"
                                android:textColor="@color/white"
                                android:textSize="13sp" />

                            <SeekBar
                                android:id="@+id/seekbarBrushSize"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="@null"
                                android:max="90"
                                android:progress="20"
                                android:progressBackgroundTint="#C89393"
                                android:progressTint="@color/pink"
                                android:splitTrack="false"
                                android:thumbTint="@color/pink"/>

                            <TextView
                                android:id="@+id/textViewSizeValue"
                                android:layout_width="40dp"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:paddingStart="5dp"
                                android:paddingEnd="5dp"
                                android:text="20"
                                android:textColor="@color/white"
                                android:textSize="13sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/linearLayoutEraser"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:paddingStart="15dp"
                            android:paddingEnd="15dp"
                            android:visibility="gone">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingStart="5dp"
                                android:paddingEnd="5dp"
                                android:text="@string/eraser"
                                android:textColor="@color/white"
                                android:textSize="13sp" />

                            <SeekBar
                                android:id="@+id/seekbarEraserSize"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="@null"
                                android:max="100"
                                android:progress="20"
                                android:progressBackgroundTint="#C89393"
                                android:progressTint="@color/pink"
                                android:splitTrack="false"
                                android:thumbTint="@color/pink" />

                            <TextView
                                android:id="@+id/textViewEraserValue"
                                android:layout_width="40dp"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:paddingStart="5dp"
                                android:paddingEnd="5dp"
                                android:text="20"
                                android:textColor="@color/white"
                                android:textSize="13sp" />

                        </LinearLayout>

                        <RelativeLayout
                            android:id="@+id/linearLayoutRecycler"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_alignParentBottom="true">

                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/recycler_view_brush_color"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/recycler_view_magic_brush"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

                        </RelativeLayout>


                    </RelativeLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/constraint_layout_confirmP"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        app:layout_constraintBottom_toBottomOf="parent">

                        <ImageView
                            android:id="@+id/imageViewClosePaint"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:onClick="onClick"
                            android:padding="12dp"
                            android:src="@drawable/ic_round_close"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/paint_txt"
                            android:layout_width="80dp"
                            android:layout_height="35dp"
                            android:gravity="center"
                            android:text="DRAW"
                            android:textColor="@color/white"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <ImageView
                            android:id="@+id/imageViewSavePaint"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:onClick="onClick"
                            android:padding="12dp"
                            android:src="@drawable/ic_round_check"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <!--text-->
            <RelativeLayout
                android:id="@+id/relativeLayoutText"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="@drawable/card3"
                android:elevation="2dp"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent">

                <TextView
                    android:id="@+id/addNewText"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/background_unslelected"
                    android:backgroundTint="@color/pink"
                    android:gravity="center"
                    android:paddingStart="25dp"
                    android:paddingEnd="25dp"
                    android:text="ADD NEW TEXT"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    android:textStyle="bold" />

            </RelativeLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
        <!--    </ScrollView>-->
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:visibility="gone"
        android:layout_alignParentBottom="true">

        <LinearLayout
            android:id="@+id/native_ads"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" />
    </RelativeLayout>

</RelativeLayout>