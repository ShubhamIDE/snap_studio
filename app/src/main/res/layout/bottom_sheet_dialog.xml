<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <View
        android:layout_width="65dp"
        android:layout_height="2dp"
        android:layout_gravity="center"
        android:layout_marginVertical="10dp"
        android:background="@drawable/curvebt" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="25dp"
        android:visibility="gone"
        android:fontFamily="@font/poppins"
        android:text="Share with link"
        android:textColor="@color/blacktwo"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="15dp"
        android:visibility="gone"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@drawable/link" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginHorizontal="10dp"
            android:layout_gravity="center_vertical"
            android:orientation="vertical">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#1A7779FF"/>

        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@drawable/paste" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="25dp"
        android:fontFamily="@font/poppins"
        android:text="Share with"
        android:textColor="@color/blacktwo"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/insta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Instagram"
            android:textStyle="bold|normal"
            android:textSize="11sp"
            android:textColor="@color/blacktwo"
            android:fontFamily="@font/poppins"
            android:drawablePadding="2dp"
            android:drawableTop="@drawable/insta"
            android:layout_weight="1"
            android:textAlignment="center"/>

        <TextView
            android:id="@+id/fb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Facebook"
            android:textStyle="bold|normal"
            android:textSize="11sp"
            android:textColor="@color/blacktwo"
            android:fontFamily="@font/poppins"
            android:drawablePadding="2dp"
            android:drawableTop="@drawable/fb"
            android:layout_weight="1"
            android:textAlignment="center"/>

        <TextView
            android:id="@+id/twitter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Twitter"
            android:textStyle="bold|normal"
            android:textSize="11sp"
            android:textColor="@color/blacktwo"
            android:fontFamily="@font/poppins"
            android:drawablePadding="2dp"
            android:drawableTop="@drawable/twitter"
            android:layout_weight="1"
            android:textAlignment="center"/>

        <TextView
            android:id="@+id/whatsapp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="WhatsApp"
            android:textStyle="bold|normal"
            android:textSize="11sp"
            android:textColor="@color/blacktwo"
            android:fontFamily="@font/poppins"
            android:drawablePadding="2dp"
            android:drawableTop="@drawable/whatsapp"
            android:layout_weight="1"
            android:textAlignment="center"/>

        <TextView
            android:id="@+id/more"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="More"
            android:textStyle="bold|normal"
            android:textSize="11sp"
            android:textColor="@color/blacktwo"
            android:fontFamily="@font/poppins"
            android:drawablePadding="2dp"
            android:drawableTop="@drawable/more"
            android:layout_weight="1"
            android:textAlignment="center"/>

    </LinearLayout>

    <TextView
        android:id="@+id/sharebtn"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_marginVertical="25dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/curvebt2"
        android:fontFamily="@font/poppins"
        android:padding="15dp"
        android:visibility="gone"
        android:text="Share Now"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:textStyle="bold" />

</LinearLayout>