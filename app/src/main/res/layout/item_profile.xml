<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:background="?attr/selectableItemBackground"
    android:layout_width="75dp"
    android:layout_height="75dp">

    <com.quarkworks.roundedframelayout.RoundedFrameLayout
        android:id="@+id/refresh_button_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:layout_margin="5dp"
        app:cornerRadiusTopLeft="10dp"
        app:cornerRadiusTopRight="10dp"
        app:cornerRadiusBottomLeft="10dp"
        app:cornerRadiusBottomRight="10dp"
        app:clippedBackgroundColor="@color/transparent"
        app:borderColor="@color/transparent"
        app:softBorderColor="@color/transparent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/black">

            <ImageView
                android:id="@+id/imageViewItem"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/frame_1"/>

        </RelativeLayout>

    </com.quarkworks.roundedframelayout.RoundedFrameLayout>

    <View
        android:id="@+id/selectedBorder"
        android:background="@drawable/background_select"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:elevation="1dp"
        android:layout_margin="5dp"/>

</RelativeLayout>
